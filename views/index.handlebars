<div id="openAnime">
  <div class="container">
    <h1 class="string text-center">
      <span class="word">Totally</span>
      <span class="word">Tubular</span>
      <span class="word">Trivia!</span>
    </h1>
  </div>
</div>


<div id="gameBoard">
  <h2>Totally Tubular Trivia!</h2>

  <form id="form1">
    <button type="button" id="playerNameButton">Player: </button>
    <input type="text" id="playerNameText" name="playertNameText" placeholder="Username">
    <button type="button" class="ctbtn" id="startButton">Join Game</button>
  </form>

  <div id="leaderBoard">

    <div class="row" id="leaderBoardHeader">
      <span class="col-md-6">Player</span>
      <span class="col-md-6">Current Score</span>
      <div id="appendScoresHere" class="col-md-12"></div>
    </div>

  </div> <!--  leaderBoard  -->


  <div id="timeRemaining">
    <div>Time Remaining: </div>
    <div id="secondsRemaining">30</div>
    <div> Seconds</div>
  </div>


  <div id="qAndA">

    <div class="row" id="qAndAHeader">
      <div id="qDiv" class="col-md-12"></div>
    </div>
    <div id="ansDiv">
    </div>

  </div> <!--  qAndA  -->

  <div class="row" id="newRound">
    <div class-"col-md-1"></div>
  </div>

</div> <!--  gameBoard  -->


<div id="results">
  <h2>Results</h2>
  <hr>
  <p id="correctAnswers">Correct Answers: </p>
  <p id="incorrectAnswers">Incorrect Answers: </p>
  <button type="button" id="playAgainButton">Play Again</button>
</div>

<div id="player-wait-modal" class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalLabel" aria-hidden="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">Please Wait</h2>
        <span aria-hidden="true"></span>
      </div>
      <div id="modal-body" class="modal-body">
        <h3>Waiting for Opponents...</h3>
        <h4>Current Users in Queue: </h4>
        <div id="usersGoHere"></div>
        <button type="button" data-btn="start" class="ctbtn hidden" id="goButton">Go!</button>
      </div>
      <div id="user-list"></div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>
